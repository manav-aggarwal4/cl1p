// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Clip {
  slug          String    @id
  content       String?
  fileUrl       String?
  fileName      String?
  fileType      String?
  fileSize      Int?
  createdAt     DateTime  @default(now())
  expiresAt     DateTime?
  destroyOnRead Boolean   @default(true)
  readAt        DateTime?

  @@index([expiresAt])
}

